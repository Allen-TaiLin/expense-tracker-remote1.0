<div class="container" style="width: 800px;">
  <div class="p-5">
    <form action="/expense/{{record._id}}?_method=PUT" method="POST">
      <div class="form-group mt-3">
        <div class="row d-flex justify-content-center">
          <div class="col-5 pr-5 d-flex justify-content-end">
            <h3><span>*</span>必填欄位</h3>
          </div>
          <div class="col-5">
            <h3>請輸入你的支出</h3>
          </div>
        </div>
      </div>
      {{!-- <div class="create-form"> --}}
        <div class="form-group">
          <div class="row d-flex justify-content-center">
            <div class="col-5 pr-5 d-flex justify-content-end">
              <h3>消費名稱<span style="color: red;">*</span> : </h3>
            </div>
            <div class="col-5">
              <input type="text" class="form-control" name="name" value="{{ record.name }}" required>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="row d-flex justify-content-center">
            <div class="col-5 pr-5 d-flex justify-content-end">
              <h3>消費日期<span style="color: red;">*</span> : </h3>
            </div>
            <div class="col-5">
              <input type="date" class="form-control" name="date" value="{{ record.date }}" style="width:263px;"
                required>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="row d-flex justify-content-center">
            <div class="col-5 pr-5 d-flex justify-content-end">
              <h3>消費類別<span style="color: red;">*</span> : </h3>
            </div>
            <div class="col-5">
              <select id="category" class="form-control" name="category" required>
                <option value="">選擇類別</option>
                {{#each categoryies}}
                <option value="{{this.category}}" {{#if_equal this.category this.tempCategory }} selected {{/if_equal}}>
                  {{this.categoryName}}
                </option>
                {{/each}}
              </select>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="row d-flex justify-content-center">
            <div class="col-5 pr-5 d-flex justify-content-end">
              <h3>店家名稱<span style="color: red;">*</span> : </h3>
            </div>
            <div class="col-5">
              <input type="text" class="form-control" name="merchant" value="{{ record.merchant }}" required>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="row d-flex justify-content-center">
            <div class="col-5 pr-5 d-flex justify-content-end">
              <h3>消費金額<span style="color: red;">*</span> : </h3>
            </div>
            <div class="col-5">
              <input type="number" class="form-control" name="amount" value="{{ record.amount }}" min="0" required>
            </div>
          </div>
        </div>
        <div class="d-flex justify-content-end">
          <button type="submit" class="btn btn-warning text-white" style="width:263px; margin-right: 59px;">
            送出儲存
          </button>
        </div>
        {{!--
      </div> --}}
    </form>
  </div>
</div>