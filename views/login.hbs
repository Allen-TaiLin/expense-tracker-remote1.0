<div class="row" style="position: absolute;top: 50%;left: 50%;width: 1000px;transform: translate(-50%, -50%)">
  <div class="col-md-6 m-auto">
    <div class="card card-body bg-secondary">
      <h1 class="text-center mt-3" style="color: lightgray;">Login</h1>
      {{> message}}
      <form action="/users/login" method="POST">
        <div class="form-group">
          <label for="email" style="color: turquoise;">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email">
        </div>
        <div class="form-group">
          <label for="password" style="color: yellowgreen;">Password</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password">
        </div>
        <button type="submit" class="btn btn-success btn-block">Login</button>
        <a href="/auth/facebook" class="btn btn-primary btn-block" role="button">Facebook Login</a>
      </form>
      <p class="lead mt-4" style="color: skyblue;">
        No Account? <a href="/users/register" style="color:white;">Register</a>
      </p>
    </div>
  </div>
</div>